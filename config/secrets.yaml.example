# IMPORTANT: This is a template file. Copy this to secrets.yaml and fill in your actual credentials.
# DO NOT commit secrets.yaml to version control!

# Data Source API Keys
data_sources:
  fred:
    api_key: "YOUR_FRED_API_KEY_HERE"
    # Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
  
  polygon:
    api_key: "YOUR_POLYGON_API_KEY_HERE"  # Optional, for premium data
    # Get your key at: https://polygon.io/
  
  alpha_vantage:
    api_key: "YOUR_ALPHA_VANTAGE_KEY_HERE"  # Optional
    # Get your key at: https://www.alphavantage.co/support/#api-key

# Notification Services
notifications:
  slack:
    webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
    # Create webhook at: https://api.slack.com/messaging/webhooks
    channel: "#money-flow-alerts"
    username: "Money Flow Bot"
  
  email:
    smtp_server: "smtp.gmail.com"
    smtp_port: 587
    use_tls: true
    username: "your-email@gmail.com"
    password: "your-app-password"
    # For Gmail, use App Password: https://support.google.com/accounts/answer/185833
    from_address: "your-email@gmail.com"
    to_addresses:
      - "recipient1@example.com"
      - "recipient2@example.com"
  
  telegram:
    bot_token: "YOUR_TELEGRAM_BOT_TOKEN"  # Optional
    chat_id: "YOUR_CHAT_ID"
    # Create bot with @BotFather on Telegram

# Database Credentials
database:
  influxdb:
    token: "YOUR_INFLUXDB_TOKEN"
    # Generate token in InfluxDB UI: Data > Tokens
  
  redis:
    password: ""  # Leave empty if no password
  
  postgresql:
    host: "localhost"
    port: 5432
    database: "money_flow"
    username: "postgres"
    password: "YOUR_POSTGRES_PASSWORD"

# API Security
api:
  secret_key: "YOUR_SECRET_KEY_HERE"  # Generate with: openssl rand -hex 32
  jwt_algorithm: "HS256"
  access_token_expire_minutes: 30

# Optional: Premium Data Services
premium_services:
  bloomberg:
    enabled: false
    api_key: "YOUR_BLOOMBERG_KEY"
  
  refinitiv:
    enabled: false
    api_key: "YOUR_REFINITIV_KEY"
